{
  "name": "pos-system",
  "private": true,
  "version": "1.0.0",
  "description": "Modern Point of Sale system built with React, TypeScript, and Tailwind CSS",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "tsc -b && vite build",
    "build:backend": "cd backend && npm install && npm run build",
    "start": "cd backend && npm start",
    "postinstall": "cd backend && npm install",
    "lint": "eslint .",
    "preview": "vite preview",
    "share": "npm run build && npx serve -s dist -l 3000",
    "share-backend": "cd backend && npm start",
    "tunnel": "npx ngrok http 3000"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "@types/web-bluetooth": "^0.0.15",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.263.1",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.8.2",
    "uuid": "^11.1.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0"
  }
}
